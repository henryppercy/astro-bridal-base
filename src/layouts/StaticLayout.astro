---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-white">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="George and Hattie's wedding portal." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>H&G | {title}</title>
	</head>
	<body class="md:h-screen flex max-md:flex-col max-md:gap-5 max-md:px-4">
		<header class="h-full md:w-1/2 flex items-center md:justify-start justify-center md:pl-5 lg:pl-20">
			<slot name="header"/>
		</header>
		<main class="h-full md:w-1/2 flex items-start justify-center md:overflow-scroll md:py-10 lg:py-24 mb-10">
			<slot name="main" />
		</main>
	</body>
</html>
