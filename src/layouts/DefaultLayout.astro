---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-white transition-colors duration-1000">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="George and Hattie's wedding portal." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>G&H | {title}</title>
		<style>
			@font-face {
				font-display: swap;
				font-family: 'FS Kim';
				font-style: normal;
				font-weight: normal;
				src: url('/fonts/FS-kim.woff2') format('woff2');
			}
			h1 {
				font-family: 'FS Kim', serif;
			}
		</style>
	</head>
	<body class="h-screen">
		<slot />
	</body>
</html>
