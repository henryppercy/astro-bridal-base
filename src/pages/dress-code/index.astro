---
import StaticLayout from '@layouts/StaticLayout.astro';
---

<StaticLayout title="Dress Code">
  <div class="pb-12 space-y-8 h-full">
    <header class="max-md:fixed max-md:bg-white pt-12 z-20 w-full">
      <h1 class="font-serif text-pink text-7xl uppercase text-center tracking-tighter px-6 pt-6">Dress Code</h1>
    </header>
    <main class="text-black uppercase text-xs md:text-base tracking-wide space-y-10 md:text-center max-md:pt-32">
      <div class="px-6">
        <p class="text-sm md:text-base">
          Cocktail party extravaganza.
        </p>
        <p class="text-sm md:text-base">
          Just don't wear a white dress please.
        </p>
      </div>
      <section class="flex justify-center h-full">
        <div class="relative flex items-center gap-6 snap-x snap-mandatory overflow-x-auto hide-scrollbar h-full">
          <div class="snap-center shrink-0">
            <div class="shrink-0 w-1"></div>
          </div>
          <div class="snap-center shrink-0 w-80 h-[500px]">
            <img class="w-full h-full object-cover rounded-lg shadow-xl" src="https://images.unsplash.com/photo-1569924995250-4e0efa9bfb2b?q=80&w=3087&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
          </div>
          <div class="snap-center shrink-0 w-80 h-[500px]">
            <img class="w-full h-full object-cover rounded-lg shadow-xl" src="https://images.unsplash.com/photo-1541532713592-79a0317b6b77?q=80&w=3088&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
          </div>
          <div class="snap-center shrink-0 w-80 h-[500px]">
            <img class="w-full h-full object-cover rounded-lg shadow-xl" src="https://images.unsplash.com/photo-1655546836727-bec4387b02e2?q=80&w=3135&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
          </div>
          <div class="snap-center shrink-0 w-80 h-[500px]">
            <img class="w-full h-full object-cover rounded-lg shadow-xl" src="https://images.unsplash.com/photo-1517263904808-5dc91e3e7044?q=80&w=3088&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
          </div>
          <div class="snap-center shrink-0 w-80 h-[500px]">
            <img class="w-full h-full object-cover rounded-lg shadow-xl" src="https://images.unsplash.com/photo-1546472585-b51e68338cb3?q=80&w=3087&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
          </div>
          <div class="snap-center shrink-0">
            <div class="shrink-0 w-1"></div>
          </div>
        </div>
      </section>
    </main>
  </div>
</StaticLayout>

<style>
.hide-scrollbar::-webkit-scrollbar {
  display: none;
}

.hide-scrollbar {
  scrollbar-width: none;
}

.hide-scrollbar {
  -ms-overflow-style: none;
}
</style>
